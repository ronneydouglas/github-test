<h1>Create a Recipe</h1>

<%= render "form", recipe: @recipe %>

<%= form_for([@recipe, @recipe.ingredients.build]) do |f| %>
  <p>
    <%= f.label :measurements %><br>
    <%= f.text_field :measurements %>
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back", recipes_path %>
